<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MyOrdersFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_my_order"
        style="@style/Toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#6327FE">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="0dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:src="@drawable/ic_shape"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/searchDada"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:background="@drawable/circle_toolbar"
                android:padding="8dp"
                app:layout_constraintHorizontal_weight="2"
                app:layout_constraintLeft_toRightOf="@id/btnBack"
                app:layout_constraintRight_toLeftOf="@id/notificationIcon"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_search" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Поиск на dadaBazar"
                    android:textColor="#7E7E7E"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/notificationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/notification" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                app:layout_constraintLeft_toLeftOf="@id/notificationIcon"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/radius_count_notif"
                    android:gravity="center"
                    android:padding="2dp"
                    android:text="10"
                    android:textColor="#000"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_my_order">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayoutView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/allOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Список заказов - (1)"
                android:textColor="#232F3E"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            <androidx.constraintlayout.widget.ConstraintLayout-->
            <!--                android:layout_width="match_parent"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginTop="16dp"-->
            <!--                app:layout_constraintTop_toBottomOf="@+id/allOrders">-->

            <!--                <androidx.recyclerview.widget.RecyclerView-->
            <!--                    android:id="@+id/recyclerMyOrder"-->
            <!--                    android:layout_width="match_parent"-->
            <!--                    android:layout_height="match_parent" />-->

            <!--            </androidx.constraintlayout.widget.ConstraintLayout>-->


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/allOrders">


                <TextView
                    android:id="@+id/titleIdProducts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ID:"
                    android:textColor="#938FA7"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/IDProducts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="134234234"
                    android:textColor="#010035"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/titleIdProducts"
                    app:layout_constraintTop_toTopOf="parent" />


                <TextView
                    android:id="@+id/titleSeller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Продавец:"
                    android:textColor="#938FA7"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleIdProducts" />

                <TextView
                    android:id="@+id/seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Виктория Небова"
                    android:textColor="#010035"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/titleSeller"
                    app:layout_constraintTop_toBottomOf="@+id/IDProducts" />


                <ImageView
                    android:id="@+id/imageProduct"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="13dp"
                    android:src="@drawable/phone"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleSeller" />


                <TextView
                    android:id="@+id/nameProduct"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="13dp"
                    android:text="Название продукта Название продукта"
                    android:textColor="#010035"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/imageProduct"
                    app:layout_constraintTop_toBottomOf="@+id/seller" />


                <TextView
                    android:id="@+id/titleStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Статус:"
                    android:textColor="#938FA7"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/imageProduct"
                    app:layout_constraintTop_toBottomOf="@+id/nameProduct" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Активен"
                    android:textColor="#010035"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/titleStatus"
                    app:layout_constraintTop_toBottomOf="@+id/nameProduct" />


                <TextView
                    android:id="@+id/titleDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Размещенный:"
                    android:textColor="#938FA7"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/imageProduct"
                    app:layout_constraintTop_toBottomOf="@+id/status" />

                <TextView
                    android:id="@+id/dateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="12.04"
                    android:textColor="#010035"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/titleDateTime"
                    app:layout_constraintTop_toBottomOf="@+id/status" />

                <TextView
                    android:id="@+id/titleItogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="Итого:"
                    android:textColor="#938FA7"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/imageProduct"
                    app:layout_constraintTop_toBottomOf="@+id/dateTime" />

                <TextView
                    android:id="@+id/itogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="1222.04₽"
                    android:textColor="#010035"
                    android:textSize="16sp"
                    app:layout_constraintLeft_toRightOf="@+id/titleItogo"
                    app:layout_constraintTop_toBottomOf="@+id/dateTime" />


                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="140dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="13dp"
                    android:background="@drawable/shape_btn_background_trading"
                    android:text="Оплатить"
                    android:textAllCaps="false"
                    android:textColor="#fff"
                    app:layout_constraintLeft_toRightOf="@+id/imageProduct"
                    app:layout_constraintTop_toBottomOf="@+id/itogo" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="32dp"
                android:background="#C4C4C4"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>