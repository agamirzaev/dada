<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Toolbar"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:background="#6327FE">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnBackCatalog"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_shape"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/searchDada"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/circle_toolbar"
            android:padding="10dp"
            app:layout_constraintLeft_toRightOf="@id/btnBackCatalog"
            app:layout_constraintRight_toLeftOf="@id/notificationIcon"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_search" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:text="Поиск на dadaBazar"
                android:textColor="#7E7E7E"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notificationIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/notification" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            app:layout_constraintLeft_toLeftOf="@id/notificationIcon"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/radius_count_notif"
                android:gravity="center"
                android:padding="2dp"
                android:text="10"
                android:textColor="#000"
                android:textSize="10sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.Toolbar>